<%- include('../partials/html-head.ejs') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css" />
<%- include('../partials/nav.ejs') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight No:</label>
    <input type="number" name="flightNo" id="flightNo-input" min="10" max="9999" required>
    <label for="depart-input">Departs:</label>
    <input 
      type="datetime-local" 
      name="departs" 
      id="departs-input"
      >
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>